<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="60dp"
    android:layout_margin="10dp"
    android:background="@mipmap/user_current"
    android:gravity="center"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/user_name_left"
        android:layout_below="@id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:text="当前检测用户："
        android:textSize="@dimen/main_text_size" />
    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_below="@id/title"
        android:text="王二小"
        android:layout_toRightOf="@id/user_name_left"
        android:textSize="@dimen/main_text_size" />


    <ImageView
        android:layout_width="70dp"
        android:layout_height="25dp"
        android:paddingRight="25dp"
        android:paddingLeft="20dp"
        android:layout_toRightOf="@id/title"
        android:onClick="replaceUser"
        android:src="@mipmap/replace" />
</LinearLayout>