<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/main_title"
        android:gravity="center"
        android:text="首页"
        android:textColor="@color/white"
        android:textSize="@dimen/title_size"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:padding="5dp"
        android:onClick="clickMenu"
        android:src="@mipmap/menu"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title">

        <TextView
            android:id="@+id/bp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:onClick="toBPPage"
            android:text="血压检测"
            android:textSize="30sp"
            android:padding="20dp"
            android:background="@color/main_01"
            android:drawableTop="@mipmap/bloodpressure"
            app:layout_constraintHeight_percent="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.5" />

        <TextView
            android:id="@+id/plu"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:onClick="toPLUPage"
            android:text="血糖检测"
            android:textSize="30sp"
            android:padding="20dp"
            android:background="@color/main_02"
            android:drawableTop="@mipmap/bloodglu"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.5"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.5" />

        <TextView
            android:id="@+id/ecg"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:onClick="toECGPage"
            android:text="心电检测"
            android:padding="20dp"
            android:textSize="30sp"
            android:background="@color/main_03"
            android:drawableTop="@mipmap/ecg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintWidth_percent="0.5" />

        <TextView
            android:id="@+id/inquiry"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:onClick="toInquiryPage"
            android:text="问诊"
            android:background="@color/main_04"
            android:drawableTop="@mipmap/inquiry"
            android:textSize="30sp"
            android:padding="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.5"
            app:layout_constraintWidth_percent="0.5" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/circle_blue2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="260dp"
            android:clickable="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="40dp"
                android:src="@mipmap/robot_icon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="110dp"
                android:textSize="30sp"
                android:text="当前用户"/>

            <TextView
                android:id="@+id/view_current_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_centerInParent="true"
                android:text="111"
                android:textSize="30sp"/>
            <TextView
                android:id="@+id/view_exchange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_edittext_normal"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="50dp"
                android:textSize="20sp"
                android:padding="5dp"
                android:onClick="exchangeUser"
                android:text="切换用户"/>
            <TextView
                android:id="@+id/view_empty_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="70dp"
                android:gravity="center"
                android:textSize="20sp"
                android:padding="10dp"
                android:onClick="toRegisterPage"
                android:visibility="gone"
                android:background="@drawable/bg_edittext_normal"
                android:text="暂无用户\n点击添加新用户"/>

        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>